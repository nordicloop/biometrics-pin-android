<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/bordo">

    <!-- TITLE -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="150dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BRD"
            android:textSize="50sp"
            android:textColor="@color/naranja"/>
        </LinearLayout>
    <!-- END TITLE -->

        <!-- BLOCK -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center|bottom"
            android:layout_marginBottom="100dp">

            <View
                android:id="@+id/view_01"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/bg_view_bordo_oval"/>

            <View
                android:id="@+id/view_02"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/bg_view_bordo_oval"
                android:layout_marginLeft="5dp"/>

            <View
                android:id="@+id/view_03"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/bg_view_bordo_oval"
                android:layout_marginLeft="5dp"/>

            <View
                android:id="@+id/view_04"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/bg_view_bordo_oval"
                android:layout_marginLeft="5dp"/>

            <View
                android:id="@+id/view_05"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/bg_view_bordo_oval"
                android:layout_marginLeft="5dp"/>

            <View
                android:id="@+id/view_06"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/bg_view_bordo_oval"
                android:layout_marginLeft="5dp"/>
        </LinearLayout>
        <!-- END BLOCK -->

        <!-- PASSCODE -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="10dp">
            <!-- LINEAR 1,2,3 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <Button
                    android:id="@+id/btn_01"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:text="1"
                    android:textStyle="bold"
                    android:textSize="28sp"
                    android:textColor="@color/naranja"/>

                <Button
                    android:id="@+id/btn_02"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:text="2"
                    android:textStyle="bold"
                    android:textSize="28sp"
                    android:textColor="@color/naranja"/>

                <Button
                    android:id="@+id/btn_03"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:text="3"
                    android:textStyle="bold"
                    android:textSize="28sp"
                    android:textColor="@color/naranja"/>
            </LinearLayout>
            <!-- END LINEAR 1,2,3 -->

            <!-- LINEAR 4,5,6 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <Button
                    android:id="@+id/btn_04"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:text="4"
                    android:textStyle="bold"
                    android:textSize="28sp"
                    android:textColor="@color/naranja"/>

                <Button
                    android:id="@+id/btn_05"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:text="5"
                    android:textStyle="bold"
                    android:textSize="28sp"
                    android:textColor="@color/naranja"/>

                <Button
                    android:id="@+id/btn_06"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:text="6"
                    android:textStyle="bold"
                    android:textSize="28sp"
                    android:textColor="@color/naranja"/>
            </LinearLayout>
            <!-- END LINEAR 4,5,6 -->

            <!-- LINEAR 7,8,9 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <Button
                    android:id="@+id/btn_07"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:text="7"
                    android:textStyle="bold"
                    android:textSize="28sp"
                    android:textColor="@color/naranja"/>

                <Button
                    android:id="@+id/btn_08"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:text="8"
                    android:textStyle="bold"
                    android:textSize="28sp"
                    android:textColor="@color/naranja"/>

                <Button
                    android:id="@+id/btn_09"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:text="9"
                    android:textStyle="bold"
                    android:textSize="28sp"
                    android:textColor="@color/naranja"/>
            </LinearLayout>
            <!-- END LINEAR 7,8,9 -->

            <!-- LINEAR BACK,0,FINGERPRINT -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <Button
                    android:id="@+id/btn_clear"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_clear_orange"/>

                <Button
                    android:id="@+id/btn_00"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:text="0"
                    android:textStyle="bold"
                    android:textSize="28sp"
                    android:textColor="@color/naranja"/>

                <Button
                    android:id="@+id/btn_finger_print"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_fingerprint_orange"/>

            </LinearLayout>
            <!-- END LINEAR BACK,0,FINGERPRINT -->
            
        </LinearLayout>
        <!-- END PASSCODE -->

    </LinearLayout>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/nav_host_fragment"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:defaultNavHost="true"
        app:navGraph="@navigation/nav_graph">

    </androidx.fragment.app.FragmentContainerView>

</RelativeLayout>